<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Carbon Recycling International</h1>
    <p>
      Please login or  
      <a href="http://cri.is/">visit our homepage</a>
    </p>

    <%= link_to "Login", signin_path, class: "btn btn-large btn-primary" %>
    <%= link_to "New User", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("cri.jpeg", alt: "CRI"), 'http://cri.is/' %>
<% end %>